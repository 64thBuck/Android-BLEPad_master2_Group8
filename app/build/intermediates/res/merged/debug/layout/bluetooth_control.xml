<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testble.MainActivity" >


    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:id="@+id/onOffSwitch" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onOffSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/A0Input" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider1"
        android:layout_marginTop="60dp"
        android:id="@+id/slider2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:max="10" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A1Input"
        android:layout_below="@+id/A0Input"
        android:layout_alignStart="@+id/A0Input"
        android:layout_marginTop="18dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/slider1"
        android:layout_below="@+id/A1Input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="16" />

</RelativeLayout >
